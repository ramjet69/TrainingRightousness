
@using GPGVM.Nop.Access.IdentityServer.Configuration.Infrastructure
@using Nop.Web.Framework
@model GPGVM.Nop.Access.IdentityServer.Plugin.Models.ClientConfigModel

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)




<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group row">
                <div class="col-md-1">
                    @Html.NopLabelFor(model => model.ClientName)
                </div>
                <div class="col-md-2">
                    @Html.NopEditorFor(x => x.ClientName)
                    @Html.ValidationMessageFor(model => model.ClientName)
                </div>
                <div class="col-md-9"></div>
            </div>
            <div class="form-group row">
                <div class="col-md-1">
                    @Html.NopLabelFor(model => model.ClientId)
                </div>
                <div class="col-md-2">
                    @Html.NopEditorFor(x => x.ClientId)
                    @Html.ValidationMessageFor(model => model.ClientId)
                </div>
                <div class="col-md-9"></div>
            </div>
            <div class="form-group row">
                <div class="col-md-1">
                    @Html.NopLabelFor(model => model.AllowedGrantTypes)
                </div>
                <div class="col-md-2">
                     @Html.NopDropDownListFor(model => model.AllowedGrantTypes, new SelectList(Enum.GetValues(typeof(GrantTypes))), "Select Grant Type")
                     @Html.ValidationMessageFor(model => model.AllowedGrantTypes)
                </div>
                <div class="col-md-9"></div>
            </div>
            <div class="form-group row">
                <div class="col-md-1">
                    @Html.NopLabelFor(model => model.IsEnabled)
                </div>
                <div class="col-md-2">
                    @Html.NopEditorFor(x => x.IsEnabled)
                    @Html.ValidationMessageFor(model => model.IsEnabled)
                </div>
                <div class="col-md-9"></div>
            </div>
            <div class="form-group row">
                <div class="col-md-1">
                    @Html.NopLabelFor(model => model.IsConsentRequired)
                </div>
                <div class="col-md-2">
                    @Html.NopEditorFor(x => x.IsConsentRequired)
                    @Html.ValidationMessageFor(model => model.IsConsentRequired)
                </div>
                <div class="col-md-9"></div>
            </div>
            
            
            
            <div class="form-group row">
                <div class="col-md-1">
                    @Html.NopLabelFor(model => model.RedirectUris)
                </div>
                <div class="col-md-10" style="border-color: darkblue; border-style: solid; border-width: thin; padding: 15px;">

                    @Html.EditorFor(x => x.RedirectUris)

                </div>
                <div class="col-md-1"></div>
            </div>
        
        
        
        </div>    
    </div>
</div>
