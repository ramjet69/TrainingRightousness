@using TrainRightMVC.Areas.Admin.Models;
@model List<Repentance>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Repentance</h2>


<div class="demo-section k-content wide">
    <a class="k-button k-button-icontext k-add-button" href="#"><span class="k-icon k-add"></span>Add new record</a>

    @(Html.Kendo().ListView(Model)
    .Name("repent_listView")
    .TagName("div")
    .ClientTemplateId("repent_template")
    .DataSource(dataSource => dataSource
        .Model(model => model.Id("Id"))
        .PageSize(4)
        .Create(create => create.Action("Editing_Create", "ListView"))
        .Read(read => read.Action("Editing_Read", "ListView"))
        .Update(update => update.Action("Editing_Update", "ListView"))
        .Destroy(destroy => destroy.Action("Editing_Destroy", "ListView"))
    )
    .Pageable()
    .Editable()
    )

</div>

    <script type="text/x-kendo-tmpl" id="repent_template">
        <div class="product-view k-widget">
            <dl>
                @*<dt>Id</dt>
                <dd>#:Id#</dd>
                <dt>SubCatId</dt>
                <dd>#:SubCatId#</dd>*@
                <dt>Bible Book</dt>
                <dd>#:BibleBook#</dd>
                <dt>Book Abbr.</dt>
                <dd>#:BibleBookAbbr#</dd>
                <dt>Verse Number</dt>
                <dd>#:VerseNumber#</dd>
                <dt>Verse</dt>
                <dd>#:Verse#</dd>
                <dt>How to repent</dt>
                <dd>#:Repent#</dd>
                <dt>Discipleship</dt>
                <dd>#:Discipleship#</dd>
            </dl>
            <div class="edit-buttons">
                <a class="k-button k-edit-button" href="\\#"><span class="k-icon k-edit"></span></a>
                <a class="k-button k-delete-button" href="\\#"><span class="k-icon k-delete"></span></a>
            </div>
        </div>
    </script>

    <script>
        $(function () {
            var listView = $("#repent_listView").data("kendoListView");

            $(".k-add-button").click(function (e) {
                listView.add();
                e.preventDefault();
            });
        });
    </script>

    @section Styles {
        <link href="@Url.Content("~/Areas/Admin/Content/TabListView.css")" rel="stylesheet" type="text/css" />
    }