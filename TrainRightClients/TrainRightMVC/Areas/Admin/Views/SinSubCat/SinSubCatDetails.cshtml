@using TrainRightMVC.Areas.Admin.Models;
@model SinSectionHeader
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div>
    <h1>
        @(Html.Kendo().MaskedTextBox().Name("section_title").Value(Model.PageTitle))
    </h1>
    <span>
        @(Html.Kendo().Editor()
      .Name("editor_quote")
      .HtmlAttributes(new { style = "height:50px;width:400px;" })
      .Resizable(resizable => resizable.Content(true).Toolbar(true))
      .ImageBrowser(imageBrowser => imageBrowser
          .Image("~/Content/UserFiles/Images/{0}")
          .Read("Read", "ImageBrowser")
          .Create("Create", "ImageBrowser")
          .Destroy("Destroy", "ImageBrowser")
          .Upload("Upload", "ImageBrowser")
          .Thumbnail("Thumbnail", "ImageBrowser")
      )
      .Value(Model.PageQuote)
        )

    </span>
    <p>
        @(Html.Kendo().Editor()
      .Name("editor_comments")
      .HtmlAttributes(new { style = "height:50px;width:450px;" })
      .Resizable(resizable => resizable.Content(true).Toolbar(true))
      .ImageBrowser(imageBrowser => imageBrowser
          .Image("~/Content/UserFiles/Images/{0}")
          .Read("Read", "ImageBrowser")
          .Create("Create", "ImageBrowser")
          .Destroy("Destroy", "ImageBrowser")
          .Upload("Upload", "ImageBrowser")
          .Thumbnail("Thumbnail", "ImageBrowser")
      )
      .Value(Model.PageComments)
        )
    </p>
</div>

<div class="wrapper">
    @(Html.Kendo().TabStrip()
              .Name("tabstrip")
              .Items(tabstrip =>
              {
                  foreach (var item in Model.TabNames)
                  {
                      tabstrip.Add().Text(item.SectionName)
                      .LoadContentFrom(item.SectionRouteName + "?subcat=" + Model.PageTitle, "Tabs");
                  }
                  
              })
    )
</div>